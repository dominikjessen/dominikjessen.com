---
import projects from '../data/projects.json';
import ProjectCard from '../components/ProjectCard.astro';
---

<section id="projects" class="w-full flex flex-col self-center items-center gap-6">
  <h2 class="text-6xl text-primary">Work in Progress</h2>
  <p class="text-2xl text-foreground/60 mb-8">Some selected projects I've been working on in various stages of done-ness.</p>
  {projects.map((project) => <ProjectCard project={project} />)}
</section>
