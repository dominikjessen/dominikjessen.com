---
import technologies from '../data/technologies.json';
import TechnologyCard from '../components/TechnologyCard.astro';
---

<section class="w-screen self-center h-[22rem] mb-8 sm:mb-16 md:mb-24 lg:mb-32 xl:mb-32">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 319" class="h-30"
    ><path
      class="w-screen fill-primary"
      fill-opacity="1"
      d="M0,64L48,58.7C96,53,192,43,288,48C384,53,480,75,576,101.3C672,128,768,160,864,149.3C960,139,1056,85,1152,58.7C1248,32,1344,32,1392,32L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
    >
    </path>
  </svg>
  <h2
    class="relative bottom-8 sm:bottom-16 md:bottom-24 lg:bottom-28 xl:bottom-32 text-3xl md:text-5xl lg:text-6xl text-background w-full text-center bg-primary"
  >
    Technologies I love
  </h2>
  <!-- Marquee tech stack -->
  <div class="-mt-8 sm:-mt-16 md:-mt-24 lg:-mt-32 xl:-mt-32 py-8 bg-primary flex overflow-hidden gap-[1rem] select-none group">
    <div
      class="flex justify-around items-center w-full min-w-full shrink-0 gap-[1rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full"
    >
      {technologies.map((item, _index) => <TechnologyCard item={item} fillColor="fill-background" />)}
    </div>
    <div
      class="flex justify-around items-center w-full min-w-full shrink-0 gap-[1rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full"
      aria-hidden="true"
    >
      {technologies.map((item, _index) => <TechnologyCard item={item} fillColor="fill-background" />)}
    </div>
  </div>
</section>
