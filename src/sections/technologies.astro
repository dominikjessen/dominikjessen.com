---
import technologies from '../data/technologies.json';
import TechnologyCard from '../components/TechnologyCard.astro';
---

<section id="technologies" class="w-full bg-primary/95 rounded-3xl self-center py-4 sm:py-6 lg:py-8 flex flex-col gap-2 sm:gap-4 lg:gap-6">
  <h2 class="text-4xl sm:text-6xl text-background w-full text-center">Tech I Love</h2>
  <!-- Marquee tech stack -->
  <div class="flex overflow-hidden gap-[1rem] select-none group mask-left-right px-4">
    <div
      class="flex justify-around items-center w-full min-w-full shrink-0 gap-[1rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full"
    >
      {technologies.map((item, _index) => <TechnologyCard item={item} fillColor="fill-background" />)}
    </div>
    <div
      class="flex justify-around items-center w-full min-w-full shrink-0 gap-[1rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full"
      aria-hidden="true"
    >
      {technologies.map((item, _index) => <TechnologyCard tabindex={-1} item={item} fillColor="fill-background" />)}
    </div>
  </div>
</section>

<style>
  .mask-left-right {
    mask-image: linear-gradient(to right, hsl(0 0% 0% / 0), hsl(0 0% 0% / 1) 10%, hsl(0 0% 0% / 1) 90%, hsl(0 0% 0% / 0));
  }
</style>
