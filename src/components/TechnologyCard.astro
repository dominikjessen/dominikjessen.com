---
import Icon from './Icon.astro';

export interface TechnologyCardProps {
  item: any;
  fillColor?: string;
}

const { item, fillColor } = Astro.props as TechnologyCardProps;
---

<a href={item.url} target="_blank" class="p-4 grid grid-cols-1 place-items-center justify-items-center rounded-full hover:bg-background/10">
  <Icon src={item.imgSrc} className={`w-10 sm:w-14 md:w-16 ${fillColor}`} />
</a>
