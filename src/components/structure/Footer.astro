---
import { Image } from 'astro:assets';
import ThemeToggle from '../ui/ThemeToggle.astro';
---

<footer id="footer" class="w-full py-16 flex flex-col gap-12 items-center bg-primary/5">
  <div class="z-10 w-5/6 sm:w-4/6 lg:w-1/2 mx-auto grid grid-cols-3 place-items-center">
    <Image src="/DJ_Logo.svg" width={32} height={32} alt="DJ Logo" class="self-center" />
    <div class="flex flex-col gap-4 mb-auto">
      <h3 class="font-bold text-primary mb-2">Links</h3>
      <a href="https://github.com/dominikjessen">GitHub</a>
      <a href="https://www.linkedin.com/in/dominikjessen/">LinkedIn</a>
      <a href="/2023_CV_DominikJessen.pdf" target="_blank">CV</a>
    </div>
    <div class="flex flex-col gap-4 mb-auto">
      <h3 class="font-bold text-primary mb-2">Say Hello</h3>
      <a id="email" href="">Email</a>
    </div>
  </div>
  <ThemeToggle />
  <div class="text-sm text-foreground/50">©️ 2023 Dominik Jessen. All rights reserved.</div>
</footer>

<script>
  const emailBase64 = 'ZG9taW5pa2plc3NlbmNvZGVzQGdtYWlsLmNvbQ==';
  const emailLink = document.getElementById('email');
  emailLink?.setAttribute('href', `mailto:${atob(emailBase64)}?subject=👋 Just Saying Hi&body=You're doing great, keep it up!`);
</script>
