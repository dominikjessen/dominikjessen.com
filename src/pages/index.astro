---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card';
import RevealCanvas from '../components/RevealCanvas';

const revealText = "Reveal me";
const revealSource = '/waves-1.svg'

const techStack = [
	{
		name: 'React',
		url: 'https://react.dev/',
		img: 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/React-icon.svg/1024px-React-icon.svg.png'
	},
	{
		name: 'Next.js',
		url: 'https://nextjs.org/',
		img: 'data:image/png;base64,'
	},
	{
		name: 'Astro',
		url: 'https://astro.build/',
		img: 'https://astro.build/assets/press/astro-icon-dark.svg'
	},
	{
		name: 'Tailwind',
		url: 'https://tailwindcss.com/',
		img: 'https://tailwindcss.com/_next/static/media/tailwindcss-mark.3c5441fc7a190fb1800d4a5c7f07ba4b1345a9c8.svg'
	},
	{
		name: 'Node.js',
		url: 'https://nodejs.org/',
		img: 'https://nodejs.org/static/images/logo.svg'
	}
]

---

<Layout title="Welcome to Astro.">
	<div class="flex flex-col gap-8">
		<section id="intro" class="flex gap-8 justify-around items-center py-12">
			<div class="flex flex-col gap-6 w-2/5">
				<span class="text-7xl animate-wave origin-[70%_70%] w-fit">üëãüèª</span>
				<h2 class="font-bold text-6xl mb-4">Hi there, I'm Dominik</h2>
				<p class="text-gray-400 text-2xl leading-relaxed">I'm a software engineer from Europe, who is in the arena trying stuff. On here I show you what that stuff is, what I'm thinking about and other shenanigans. If you like what you see - or even better, don't - then send me a message.</p>
				<button>Click me</button>
			</div>
			<RevealCanvas client:load revealContent={revealSource} />
		</section>
		<section>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 319" class="h-30"><path class="w-screen fill-primary" fill-opacity="1" d="M0,64L48,58.7C96,53,192,43,288,48C384,53,480,75,576,101.3C672,128,768,160,864,149.3C960,139,1056,85,1152,58.7C1248,32,1344,32,1392,32L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z">
				</path>
			</svg>
			<!-- Marquee tech stack -->
			<div class="-mt-8 sm:-mt-16 md:-mt-24 lg:-mt-32 xl:-mt-32 py-8 bg-primary flex overflow-hidden gap-[4rem] select-none h-28 group">
				<div class="flex justify-around items-center w-full min-w-full shrink-0 gap-[4rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full">
					{techStack.map((item, _index) => (
						<a href={item.url} target="_blank" class="grid grid-cols-1 place-items-center justify-items-center gap-1 p-8 hover:bg-background rounded">
							<img src={item.img} alt={item.name} class="w-16"/>
							<span class="uppercase leading-relaxed font-bold text-2xl">{item.name}</span>
						</a>
					))}
				</div>
				<div class="flex justify-around items-center w-full min-w-full shrink-0 gap-[4rem] animate-marquee_rtl group-hover:[animation-play-state:paused] h-full" aria-hidden="true">
					{techStack.map((item, _index) => (
						<a href={item.url} target="_blank" class="grid grid-cols-1 place-items-center justify-items-center gap-1 p-8 hover:bg-background rounded">
							<img src={item.img} alt={item.name} class="w-16"/>
							<span class="uppercase leading-relaxed font-bold text-2xl">{item.name}</span>
						</a>
					))}
				</div>
			</div>

			
		</section>
		<!-- <Card title='This is a card' textColor='text-slate-500' viewBox="0 0 1440 319"  /> -->
	</div>
</Layout>
