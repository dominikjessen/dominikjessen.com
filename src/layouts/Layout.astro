---
import '@fontsource-variable/signika';
import { Analytics } from '@vercel/analytics/react';
import Nav from '../components/structure/Nav.astro';
import Footer from '../components/structure/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hey, I'm Dominik - a Software Engineer from Europe!" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground overflow-x-hidden">
    <Nav />
    <main class="w-5/6 mx-auto pt-8 pb-24">
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>

<style is:global>
  html {
    --background: 72 99% 98%;
    --foreground: 70 5% 7%;
    --foreground_lighter: 70 11% 11%;
    --primary: 119 19% 42%;
    --accent_seagreen: 150 66% 75%;
    --brass: 43 66% 66%;
    --rose: 0 87% 91%;
    --mint: 150 66% 97%;
    --blush: 0 87% 97%;
    --aliceblue: 208 100% 97%;

    --header-background: 72 99% 98%; /* Light background for light mode */
  }

  html.dark {
    --background: 120 2% 10%;
    --foreground: 72 99% 98%;
    --foreground_lighter: 90 6% 93%;
    --primary: 120 19% 50%;
    --accent_seagreen: 150 66% 75%;
    --brass: 43 66% 66%;
    --rose: 0 87% 91%;
    --mint: 150 66% 5%;
    --blush: 354 53% 6%;
    --aliceblue: 208 100% 6%;

    --header-background: 119 19% 50%; /* Green background for dark mode */
  }

  ::selection {
    background: hsl(var(--primary));
    color: hsl(var(--background));
  }

  h1,
  h2 {
    font-family: 'Signika Variable', sans-serif;
    font-weight: 700;
  }

  a:hover {
    opacity: 80%;
  }

  .scroll-fade-in {
    animation: fade-in 2s linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 50%;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
